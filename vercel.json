{
  "functions": [
    {
      "src": "api/**/*.js",
      "runtime": "nodejs16.x"
    },
    {
      "src": "api/server.js",
      "runtime": "nodejs16.x"
    },
    {
      "src": "api",
      "handler": "server/server.js"
    }
  ],
  "routes": [
    {
      "src": "/api/send-email",
      "dest": "api/send-email.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/server.js",
      "dest": "api/server.js"
    }
  ]
}
